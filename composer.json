{
  "name": "elliotjreed/php-package-boilperplate",
  "license": "MIT",
  "type": "project",
  "description": "hw",
  "autoload": {
    "psr-4" : {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Dmytro Filiuk",
      "email": "dfiliuk@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3.0",
    "ext-pdo": "*",
    "ext-sqlite3": "*",
    "psr/http-message": "^1.0",
    "psr/container": "^2.0",
    "php-di/php-di": "^7.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "phpmd/phpmd": "^2.13",
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "analyze": [
      "phpstan analyze -l 5 src",
      "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
      "phpcs --standard=PSR12 src"
    ],
    "cs-fix": "phpcbf --standard=PSR12 src",
    "test": "phpunit --config phpunit-config.xml",
    "test-coverage": "XDEBUG_MODE=coverage phpunit --config phpunit-config.xml --coverage-text",
    "setup-hooks": "./vendor/bin/cghooks add --ignore-lock",
    "update-hooks": "./vendor/bin/cghooks update",
    "post-install-cmd": [
      "./vendor/bin/cghooks add --ignore-lock"
    ],
    "post-update-cmd": [
      "./vendor/bin/cghooks update"
    ]
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "echo 'Running code style checks...'",
        "PHP_CS_FIXER_IGNORE_ENV=1 ./vendor/bin/phpcbf --standard=PSR12 src tests",
        "./vendor/bin/phpcs --standard=PSR12 src tests || (echo 'Please fix the code style issues before committing' && exit 1)",
        "echo 'Running tests...'",
        "./vendor/bin/phpunit --config phpunit-config.xml || (echo 'Tests failed. Please fix the issues before committing' && exit 1)",
        "echo 'All checks passed!'"
      ]
    }
  }
}